<h2 class="text-center py-3"><%= "All the projects available" %></h2>

<div style="width: 85%; height: 300px; margin-left: 110px; "
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div class="container">
  <div class="cards">
    <% @movies.each do |movie|%>
      <div class="card-product">
      <div class="card-img"   style="background-image:url('<%= image_path movie.poster%>');" >
      </div>
        <div class="d-flex flex-column flex-grow-1 p-2">
          <h2><%= link_to movie.title, movie_path(movie) %></h2>
          <%= movie.release_date%>
          <p> <strong> Scenario : </strong> <%= movie.description%> </p>
          <p><strong>Budget:</strong> <%= movie.price%> euros </p>
          <p><strong>Genre:</strong> <span class="product-tag"> <%= movie.movie_type%><span>  </p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
  </ul>
</nav>
