<h2 class="text-center py-3"><%= "All the movies available" %></h2>

<div class="container">
  <div class="cards">
    <% @movies.each do |movie|%>
      <div class="card-product">
       <div style="width: 50px; height: 50px">
       </div>
        <div class="d-flex flex-column">
          <h2><%= link_to movie.title, movie_path(movie) %></h2>
          <%= movie.release_date%>
          <p> <strong> Synopsis : </strong> <%= movie.description%> </p>
          <p><strong>Budget:</strong> <%= movie.price%>  </p>
          <p><strong>Type:</strong> <span class="product-tag"> <%= movie.movie_type%><span>  </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
