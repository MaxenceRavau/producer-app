<h2 class="text-center py-3"><%= "All the movies available" %></h2>

<div style="width: 30%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div class="container">
  <div class="cards">
    <% @movies.each do |movie|%>
      <div class="card-product">
      <div class="card-img"   style="background-image:url('<%= image_path movie.poster%>');" >

      </div>
        <div class="d-flex flex-column flex-grow-1 p-2">
          <h2><%= link_to movie.title, movie_path(movie) %></h2>
          <%= movie.release_date%>
          <p> <strong> Synopsis : </strong> <%= movie.description%> </p>
          <p><strong>Budget:</strong> <%= movie.price%>  </p>
          <p><strong>Type:</strong> <span class="product-tag"> <%= movie.movie_type%><span>  </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
